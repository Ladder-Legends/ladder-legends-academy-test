# Auth.js Configuration
AUTH_SECRET=your-random-secret-here  # Generate with: openssl rand -base64 32
AUTH_URL=http://localhost:3000  # Change to your production URL when deploying

# Development Mode - Skip role/server checking but still require Discord login
# Useful for testing without bot setup or server membership
# IMPORTANT: Set to 'false' or remove in production!
SKIP_ROLE_CHECK=true

# Permission Emulation (Development Only)
# Emulate specific permission levels for testing CMS features
# Options: 'owner', 'coach', 'subscriber', or leave empty for real permissions
# IMPORTANT: Only works in development (NODE_ENV !== 'production')
# EMULATE_ROLE=owner

# Discord OAuth Application
# Create an app at https://discord.com/developers/applications
AUTH_DISCORD_ID=your-discord-client-id
AUTH_DISCORD_SECRET=your-discord-client-secret

# Discord Bot Token (for role checking)
# Get this from the Bot section of your Discord application
# Required scopes: bot
# Required permissions: Read Messages/View Channels
DISCORD_BOT_TOKEN=your-discord-bot-token

# GitHub Token (for CMS content commits)
# Create a Personal Access Token at https://github.com/settings/tokens
# Required scopes: repo (Full control of private repositories)
# This allows the CMS to commit changes directly to the repository
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=chadfurman
GITHUB_REPO_NAME=ladder-legends-academy

# Vercel Deploy Hook (optional - for automatic deployments)
# Create a deploy hook in Vercel project settings
# CMS will trigger this webhook after committing changes
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/...

# Vercel Blob Storage (for replay file uploads)
# Get this from Vercel project settings → Storage → Create Blob Store
# This token allows uploading files to Vercel Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# SC2 Replay Analyzer API (Flask API for parsing replay files)
# URL of the sc2reader Flask API
SC2READER_API_URL=http://localhost:8000
# Shared secret for authenticating with the sc2reader API
SC2READER_API_KEY=your-secret-key-change-this

# Mux Video Platform (for video hosting and streaming)
# Get these from https://dashboard.mux.com/ → Settings → Access Tokens
MUX_API_KEY=your-mux-token-id
MUX_SECRET=your-mux-token-secret
# For secure signed URLs - get from Mux Dashboard → Settings → Signing Keys
MUX_SIGNING_KEY_ID=your-signing-key-id
MUX_SIGNING_KEY_PRIVATE_KEY=your-signing-key-private-key
# Video quality: 'basic' (free tier, up to 1080p) or 'plus' (paid tier, adaptive)
# Default: basic
MUX_VIDEO_QUALITY=basic
